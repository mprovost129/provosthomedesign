# --- Core ---
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1
SECURE_SSL_REDIRECT=False
BEHIND_PROXY=False

# --- Email (Microsoft Graph via django-msgraphbackend) ---
EMAIL_BACKEND=msgraphbackend.MSGraphBackend
DEFAULT_FROM_EMAIL=your-email@yourdomain.com
SERVER_EMAIL=your-email@yourdomain.com
AUTO_ACK_FROM_EMAIL=your-email@yourdomain.com
EMAIL_SUBJECT_PREFIX="[Your Company]"
CONTACT_EMAIL_SUBJECT_PREFIX="[Your Company]"

# --- Microsoft Graph OAuth2 ---
MICROSOFT_GRAPH_CLIENT_ID=your-client-id
MICROSOFT_GRAPH_CLIENT_SECRET=your-client-secret
MICROSOFT_GRAPH_TENANT_ID=your-tenant-id
MSGRAPH_USER_ID=your-email@yourdomain.com
MSGRAPH_SCOPE=https://graph.microsoft.com/.default

# --- Business info ---
COMPANY_NAME=Your Company Name
CONTACT_NAME=Your Name
CONTACT_EMAIL=contact@yourdomain.com
CONTACT_TO_EMAILS=contact@yourdomain.com
CONTACT_PHONE=555-123-4567
CONTACT_ADDRESS="Your Address"
BRAND_LOGO_STATIC=images/logo.svg
TAGLINE="Your Tagline"

# --- Google Analytics ---
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# --- reCAPTCHA v3 ---
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
RECAPTCHA_MIN_SCORE=0.5

# --- Rate Limiting ---
PLAN_CHANGE_RATE_LIMIT=3/h
PLAN_CHANGE_MIN_MESSAGE_LEN=20

# --- Stripe Payment Processing ---
# Get your keys from https://dashboard.stripe.com/apikeys
# For development: Use TEST mode keys (pk_test_xxx, sk_test_xxx)
# For production: Use LIVE mode keys (pk_live_xxx, sk_live_xxx) - NEVER commit these!
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# --- Security (Production) ---
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
